---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// 1. Obtener Datos
const allBooks = await getCollection('books');
const novelas = allBooks.filter(book => book.data.category === 'novela');
const infantiles = allBooks.filter(book => book.data.category === 'infantil');

// Helper para año
const getYear = (date: Date) => date.getFullYear();

// 2. Obtener Blog Posts
const allPosts = await getCollection('posts');
// Ordenamos por fecha (más nuevo primero)
const sortedPosts = allPosts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());
// Tomamos solo los 3 más recientes
const latestPosts = sortedPosts.slice(0, 3);
---

<BaseLayout title="Inicio | María Esperanza Gallegos">

  <header class="pt-24 pb-32 px-6 text-center max-w-5xl mx-auto">
    <div class="reveal">
        <span class="inline-block py-1 px-3 border border-sage/50 rounded-full text-sage font-sans font-bold tracking-[0.2em] text-[10px] uppercase mb-8">
            Escritora & Narradora
        </span>
    </div>
    
    <h1 class="reveal delay-100 font-serif text-6xl md:text-8xl text-ink leading-[1] mb-10">
      Historias que <span class="font-light italic text-dusty-rose">respiran</span> <br class="hidden md:block" /> 
      entre la realidad y la fantasía.
    </h1>
    
    <p class="reveal delay-200 text-ink/60 text-lg md:text-2xl font-sans font-light max-w-2xl mx-auto leading-relaxed">
      Bienvenido a mi rincón de papel digital. Aquí encontrarás novelas que desgarran el alma y cuentos que la sanan.
    </p>

    <div class="reveal delay-300 mt-16 animate-bounce text-ink/20 font-serif text-xl">
        ↓
    </div>
  </header>

  <main class="px-6 pb-24 max-w-7xl mx-auto" id="libros">
    
    {novelas.length > 0 && (
      <section class="mb-32">
        <div class="reveal flex items-baseline justify-between border-b border-ink/10 pb-4 mb-16">
          <h2 class="font-serif text-4xl text-ink">Novelas</h2>
          <span class="hidden md:inline text-sm text-ink/50 italic font-serif">Ficción Contemporánea</span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-16">
          {novelas.map((book) => (
            <a href={`/libros/${book.slug}`} class="reveal group flex flex-col h-full hover:no-underline"> 
              
              <div class="relative w-full aspect-[2/3] overflow-hidden rounded-sm bg-ink/5 mb-6 shadow-sm group-hover:shadow-2xl transition-all duration-700 ease-out">
                 {book.data.status === 'upcoming' && (
                   <div class="absolute top-0 right-0 bg-ink text-paper text-[10px] font-bold px-3 py-1 uppercase tracking-widest z-10">
                     Próximamente
                   </div>
                 )}
                 <img 
                   src={book.data.cover} 
                   alt={`Portada de ${book.data.title}`}
                   class="w-full h-full object-cover grayscale-[20%] group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700 ease-out"
                   loading="lazy"
                 />
              </div>
              
              <div class="text-center md:text-left flex flex-col flex-grow">
                <span class="text-xs text-ink/40 font-bold tracking-widest uppercase block mb-2">
                    {getYear(book.data.publishedAt)}
                </span>
                <h3 class="font-serif text-2xl text-ink mb-1 group-hover:text-dusty-rose transition-colors duration-300">
                  {book.data.title}
                </h3>
                {book.data.subtitle && (
                    <p class="text-sage font-serif italic text-lg mb-3">
                    {book.data.subtitle}
                    </p>
                )}
                
                <p class="text-ink/60 font-sans text-sm leading-relaxed mb-4 line-clamp-3">
                  {book.data.synopsis}
                </p>
                
                <div class="mt-auto pt-2 text-xs font-bold uppercase tracking-widest text-ink/40 group-hover:text-ink/80 transition-colors">
                    Ver Detalles &rarr;
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    {infantiles.length > 0 && (
      <section class="mb-32">
        <div class="reveal flex items-baseline justify-between border-b border-ink/10 pb-4 mb-16">
          <h2 class="font-serif text-4xl text-ink">Mundo Infantil</h2>
          <span class="hidden md:inline text-sm text-ink/50 italic font-serif">Para pequeños soñadores</span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-12">
          {infantiles.map((book) => (
            <a href={`/libros/${book.slug}`} class="reveal group cursor-pointer flex flex-col h-full hover:no-underline">
              <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-sage/20 mb-5 shadow-sm group-hover:shadow-lg transition-all duration-500 group-hover:-translate-y-2">
                 <img 
                   src={book.data.cover} 
                   alt={book.data.title}
                   class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity duration-500"
                   loading="lazy"
                 />
              </div>
              <div class="flex flex-col flex-grow text-center md:text-left">
                  <h3 class="font-serif text-xl text-ink mb-1 group-hover:text-sage transition-colors">
                    {book.data.title}
                  </h3>
                  <p class="text-ink/60 font-sans text-sm line-clamp-2 mt-auto">
                    {book.data.synopsis}
                  </p>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <section id="bio" class="py-32 border-t border-ink/10 scroll-mt-20">
      <div class="max-w-5xl mx-auto grid md:grid-cols-12 gap-16 items-center">
        
        <div class="reveal md:col-span-5 relative group">
            <div class="absolute inset-0 bg-dusty-rose/30 translate-x-3 translate-y-3 rounded-sm -z-10 transition-transform group-hover:translate-x-5 group-hover:translate-y-5 duration-500"></div>
            
            <img
              src="/img/retrato-maria.jpg" 
              alt="Retrato de María Esperanza Gallegos"
              class="w-full h-auto aspect-[4/5] object-cover rounded-sm shadow-md grayscale-[20%] group-hover:grayscale-0 transition-all duration-700"
              loading="lazy"
            />
        </div>
        
        <div class="reveal delay-100 md:col-span-7 space-y-8">
          
          <span class="text-sage font-sans font-bold tracking-[0.2em] text-xs uppercase block">
            Detrás de las letras
          </span>
          
          <h2 class="font-serif text-4xl md:text-5xl text-ink leading-[1.1]">
            Escribo para entender el mundo <span class="italic text-dusty-rose">y a nosotros mismos</span>.
          </h2>
          
          <div class="space-y-6 font-sans font-light text-ink/80 text-lg leading-relaxed">
            <p>
              [Texto placeholder para visualizar el espacio. Aquí iría su biografía real, conectando emocionalmente con el lector.]
            </p>
            <p>
              Nací en una tierra donde las montañas susurran historias. Desde pequeña, descubrí que las palabras eran la mejor forma de atrapar la realidad y moldearla. Mis novelas buscan explorar los rincones complejos del alma adulta, mientras que mis cuentos infantiles son una invitación a no perder nunca la capacidad de asombro.
            </p>
            <p>
              Creo firmemente en el poder de una buena historia para sanar, confrontar o simplemente acompañar con una taza de té.
            </p>
          </div>
          
          <p class="font-serif italic text-3xl text-ink/40 pt-4">
            - María E. G.
          </p>
        </div>
      </div>
    </section>

    <section id="blog" class="py-24 border-t border-ink/10 scroll-mt-20">
      <div class="max-w-4xl mx-auto px-6">
        
        <div class="reveal text-center mb-16">
          <span class="text-sage font-sans font-bold tracking-[0.2em] text-xs uppercase block mb-4">
            Diario de Escritura
          </span>
          <h2 class="font-serif text-4xl text-ink">Pensamientos & Ensayos</h2>
        </div>

        <div class="grid gap-12">
          {latestPosts.map((post) => (
            <article class="reveal group relative flex flex-col md:flex-row gap-6 md:items-baseline border-b border-ink/10 pb-12 last:border-0">
              
              <div class="md:w-32 flex-shrink-0">
                <time datetime={post.data.publishedAt.toISOString()} class="text-xs font-bold text-ink/40 uppercase tracking-widest font-sans">
                  {post.data.publishedAt.toLocaleDateString('es-ES', { month: 'long', year: 'numeric' })}
                </time>
              </div>

              <div class="flex-grow">
                <h3 class="font-serif text-2xl text-ink mb-3 group-hover:text-dusty-rose transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    <span class="absolute inset-0"></span> {post.data.title}
                  </a>
                </h3>
                <p class="text-ink/60 font-sans font-light leading-relaxed mb-4">
                  {post.data.description}
                </p>
                <span class="text-xs font-bold text-dusty-rose uppercase tracking-widest group-hover:text-sage transition-colors">
                  Leer ensayo &rarr;
                </span>
              </div>

            </article>
          ))}
        </div>

        {latestPosts.length === 0 && (
          <p class="reveal text-center text-ink/40 italic font-serif">Aún no hay entradas publicadas.</p>
        )}

      </div>
    </section>

  </main>
</BaseLayout>